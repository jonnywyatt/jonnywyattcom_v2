<%= form_for article do |f| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited
        this article from being saved:</h2>
      <ul>
        <% article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, size: 60 %>
  </p>

  <p>
    <label>Published</label>
  </p>
  <p>
    <%= f.check_box :is_published, class: 'article__is-published' %>
    <%= f.date_field :date_published %>
  </p>

  <p>
    <%= f.label :url %><br>
    <%= f.url_field :url, size: 60 %>
  </p>
  <p>
    <%= f.label :tech_used %><br>
    <%= f.text_area :tech_used %>
  </p>
  <p>
    <%= f.label :intro %><br>
    <%= f.text_area :intro %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<% content_for :javascript do %>
require(['tinyMCE'], function(tinyMCE) {
  tinyMCE.init({
    selector:'textarea',
    plugins: "image,code"
  });
});
<% end %>